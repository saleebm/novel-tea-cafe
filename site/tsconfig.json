{
    "compilerOptions": {
      "target": "ES2018",
      "rootDir": ".",
      "module": "ESNext",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "strictFunctionTypes": true,
      "alwaysStrict": true,
      "noUnusedParameters": false,
      "noImplicitReturns": true,
      "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "allowSyntheticDefaultImports": true,
      "noImplicitThis": true,
      "typeRoots": [
        "./src/models/*/**.d.ts",
        "./node_modules/@types"
      ],
      "baseUrl": ".",
      "paths": {
        "@Components/*": [
          "src/components/*"
        ],
        "@Components": [
          "src/components"
        ],
        "@Config": [
          "src/config"
        ],
        "@Config/*": [
          "src/config/*"
        ],
        "@Containers": [
          "src/containers"
        ],
        "@Containers/*": [
          "src/containers/*"
        ],
        "@Graphql": [
          "src/graphql"
        ],
        "@Graphql/*": [
          "src/graphql/*"
        ],
        "@Static/*": [
          "static/*"
        ],
        "@Services": [
          "src/services"
        ],
        "@Services/*": [
          "src/services/*"
        ],
        "@Styles/*": [
          "src/styles/*"
        ],
        "@Types": [
          "src/models"
        ],
        "@Types/*": [
          "src/models/*"
        ],
        "@Utils": [
          "src/utils"
        ],
        "@Utils/*": [
          "src/utils/*"
        ]
      }
    },
    "include": [
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }
